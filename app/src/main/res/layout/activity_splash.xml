<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/kiddo_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/sign_in_splash"
        app:layout_constraintBottom_toTopOf="@id/log_in_splash"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.663"
        tools:layout_editor_absoluteX="50dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="5dp"
        android:paddingEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/log_in_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="@string/log_in_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.457"
        tools:layout_editor_absoluteX="50dp"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="5dp"
        android:paddingEnd="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button1"/>


</androidx.constraintlayout.widget.ConstraintLayout>